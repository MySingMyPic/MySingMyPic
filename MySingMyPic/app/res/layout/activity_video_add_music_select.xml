<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    tools:context="com.ylsg365.pai.activity.video.VideoAddMusicSelectActivity">

    <include android:id="@+id/toolbar" layout="@layout/toolbar_back"/>
    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/my_music_tag"
                android:text="我录制的音乐"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:textColor="@color/text_radio_normal"
                android:textSize="18dp"
                ></TextView>
            <ListView
                android:id="@+id/my_music_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:divider="@color/line_radio"
                android:background="@color/white"
                ></ListView>
            <TextView
                android:id="@+id/other_music_tag"
                android:text="库音乐"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:textColor="@color/text_radio_normal"
                android:textSize="18dp"
                ></TextView>
            <ListView
                android:id="@+id/other_music_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:divider="@color/line_radio"
                android:background="@color/white"
                ></ListView>
            </LinearLayout>
        </ScrollView>

</RelativeLayout>
