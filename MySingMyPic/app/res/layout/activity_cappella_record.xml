<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.ylsg365.pai.activity.video.VideoActivity">



    <RelativeLayout
        android:id="@+id/layout_top"
        android:background="@drawable/bg_default"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <ImageView
            android:layout_width="190dp"
            android:src="@drawable/img_record_bg"
            android:layout_centerInParent="true"
            android:id="@+id/image"
            android:layout_height="115dp"/>
    </RelativeLayout>
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back_transparent"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/layout_info"
        android:layout_below="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="8dp"
                android:src="@drawable/icon_record_now"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

            <TextView
                android:id="@+id/text_time"
                android:includeFontPadding="false"
                android:textColor="@color/text_radio_normal"
                android:text="正在录制 00:00"
                android:textSize="@dimen/font_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <SurfaceView
        android:id="@+id/surface_rate"
        android:layout_below="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_video_bottom_bar" />

    <LinearLayout
        android:id="@+id/layout_video_bottom_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/layout_cancel"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/selector_btn_cancel"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="放弃录制"
                    android:textColor="@color/bottom_bar_text_normal"
                    android:textSize="@dimen/font_normal"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:id="@+id/layout_record"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/selector_btn_play"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="开始录制"
                    android:textColor="@color/bottom_bar_text_normal"
                    android:textSize="@dimen/font_normal"/>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/layout_finish"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/selector_btn_save"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="完成录制"
                    android:textColor="@color/bottom_bar_text_normal"
                    android:textSize="@dimen/font_normal"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
