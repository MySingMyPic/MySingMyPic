<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_dialog_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="55dp"
    android:layout_marginLeft="55dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <EditText
        android:background="@drawable/selector_text_common_white"
        android:layout_width="match_parent"
        android:minHeight="114dp"
        android:padding="10dp"
        android:gravity="top"
        android:textColor="@color/text_radio_normal"
        android:textColorHint="@color/text_hint_grey"
        android:layout_height="wrap_content"
        android:hint="请输入一段话" />

    <View
        android:background="@color/line_radio"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/selector_text_common_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_radio_normal"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="取消" />

        <View
            android:background="@color/line_radio"
            android:layout_width="1px"
            android:layout_height="match_parent" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_cancel"
            android:background="@drawable/selector_text_common_white"
            android:layout_width="0dp"
            android:textColor="@color/text_radio_normal"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="上传" />
        </LinearLayout>

</LinearLayout>