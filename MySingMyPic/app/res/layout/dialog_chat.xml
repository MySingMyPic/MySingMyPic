<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/layout_top"
        android:background="@drawable/bg_zong_gray_top"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_private_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18.5dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_btn_private_message"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pexpression"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_btn_expression"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_photo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_btn_photo"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/layout_top"
        android:id="@+id/emojis_pager"
        android:layout_width="match_parent"
        android:layout_height="115dp"/>

</RelativeLayout>