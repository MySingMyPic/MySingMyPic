<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ylsg365.pai.activity.login.LoginActivity"
    tools:ignore="MergeRootFrame">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_common" />

    <ListView
        android:id="@+id/list"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:divider="@drawable/list_diver_0dp"
        android:dividerHeight="0.5dp"
        android:background="@android:color/white"
        android:visibility="gone"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layout_edit_money"
                style="@style/Yin.login.edit.container">

                <EditText
                    android:id="@+id/edit_register_money"
                    style="@style/Yin.login.edit"
                    android:hint="请输入金额"
                    android:inputType="numberDecimal"
                    android:maxLength="11" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_edit_banknum"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edit_banknum"
                    style="@style/Yin.login.edit"
                    android:hint="银行卡号"
                    android:inputType="number"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_edit_bank"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edit_bank"
                    style="@style/Yin.login.edit"
                    android:hint="兴业银行" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_edit_name"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edit_name"
                    style="@style/Yin.login.edit"
                    android:hint="银行开户姓名" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_edit_idnum"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edit_idnum"
                    style="@style/Yin.login.edit"
                    android:hint="身份证号码" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_edit_bankname"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edit_register_bankname"
                    style="@style/Yin.login.edit"
                    android:hint="请输入银行支行" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_edit_phone"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/edit_phone"
                    style="@style/Yin.login.edit"
                    android:hint="请输入银行预留手机号"
                    android:inputType="phone"
                    android:maxLength="11"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_edit_verify_code"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/edit_register_verify_code"
                    style="@style/Yin.login.edit"
                    android:layout_width="150dp"
                    android:layout_centerVertical="true"
                    android:maxLength="6"
                    android:hint="请输入验证码"
                    android:inputType="number" />

                <TextView
                    android:clickable="true"
                    android:id="@+id/text_validate_code"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_btn_purple_radius_n"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:paddingLeft="12dp"
                    android:minWidth="100dp"
                    android:paddingRight="12dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:paddingTop="6dp"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </RelativeLayout>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_register_next"
                style="@style/Yin.login.button.red"
                android:text="下一步"
                android:layout_marginBottom="30dp"
                />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>
