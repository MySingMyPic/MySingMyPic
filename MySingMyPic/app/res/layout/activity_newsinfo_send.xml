<com.ylsg365.pai.face.KeyboardListenRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_main"
    android:id="@+id/top_root"
                tools:context="com.ylsg365.pai.activity.singsong.SongActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="100dp"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/recycler_imgs"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:focusable="true">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/edit_content"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:background="@drawable/bg_common_zone"
            android:gravity="top"
            android:hint="请输入文字"
            android:padding="5dp"
            android:textColor="@color/text_radio_normal"
            android:textSize="16dp"/>

    </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_imgs"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/transparent"
        android:layout_above="@+id/op_layout"
        android:clipToPadding="false" />
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/op_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/face_layout"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/at"
            android:src="@drawable/atxuanzhong"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/face"
            android:src="@drawable/biaoqingxuanzhong"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/pic"
            android:src="@drawable/biaoqingxuanzhong"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        </LinearLayout>

    <RelativeLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:id="@+id/face_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></RelativeLayout>
</com.ylsg365.pai.face.KeyboardListenRelativeLayout>
