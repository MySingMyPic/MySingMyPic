<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ylsg365.pai.activity.room.RoomCreateActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_common" />

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingBottom="50dp"
                android:paddingTop="50dp"
                android:id="@+id/layout_gift_info"
                android:background="@color/purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_gift_info_balance"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginRight="5dp"
                        android:text="音乐币余额: "
                        android:includeFontPadding="false"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/money"
                        android:textSize="@dimen/font_large"
                        android:includeFontPadding="false"
                        android:text="2000"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </LinearLayout>

                    <com.ylsg365.pai.activity.view.CircleImageView
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="50dp"
                        android:layout_width="125dp"
                        android:id="@+id/img_gift"
                        android:layout_below="@+id/layout_gift_info_balance"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/img_gift_1"
                        android:layout_height="125dp" />

                <LinearLayout
                    android:layout_below="@+id/img_gift"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        android:layout_marginRight="5dp"
                        android:text="汽车: "
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/price"
                        android:text="100音乐币"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>
            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btn_login_login"
                style="@style/Yin.login.button.red"
                android:layout_below="@+id/layout_gift_info"
                android:text="送礼"
                />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
