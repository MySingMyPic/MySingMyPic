<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/bg_list_common"
    tools:context="com.ylsg365.pai.activity.singsong.SongActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/layout_mic_info"
        android:layout_height="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/icon_clock_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="拍麦模式: "
            android:textSize="15dp"
            android:textColor="@color/text_radio_normal"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_model"
            android:layout_width="wrap_content"
            android:text="55秒"
            android:textSize="15dp"
            android:textColor="@color/purple"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_sing"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="1.5dp"
            android:includeFontPadding="false"
            android:textColor="@color/text_radio_normal"
            android:paddingTop="1.5dp"
            android:textSize="@dimen/font_mico"
            android:text="插麦"
            android:layout_width="50dp"
            android:layout_height="15dp" />
        </RelativeLayout>
    <android.support.v7.widget.RecyclerView

        android:layout_below="@+id/layout_mic_info"
        android:id="@+id/recycler_user"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"/>
</RelativeLayout>
