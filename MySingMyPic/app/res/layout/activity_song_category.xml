<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ylsg365.pai.activity.singsong.SongCategoryActivity"
    android:background="@color/bg_main_common">

    <include android:id="@+id/toolbar" layout="@layout/toolbar_back_notext"/>
    <include android:layout_below="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/search" layout="@layout/layout_search_common"/>
    <ListView
        android:layout_below="@+id/search"
        android:id="@+id/recycler_song_category"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"/>

</RelativeLayout>
