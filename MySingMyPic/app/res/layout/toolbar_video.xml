<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/purple"

    app:contentInsetStart="0dp"  app:contentInsetEnd="0dp"
   >

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:drawablePadding="5dp"
        android:text="返回"
        android:drawableLeft="@drawable/img_toobar_back"
        android:id="@+id/text_toolbar_left"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:background="@drawable/selector_bg_title"
        android:layout_height="match_parent" />



    <ImageButton
        android:layout_width="30dp"
        android:background="@color/transparent"
        android:visibility="visible"
        android:id="@+id/ibtn_camera"
        android:src="@drawable/img_camera"
        android:textSize="@dimen/font_big"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:layout_height="38dp" />
    <ImageButton
        android:layout_width="30dp"
        android:visibility="visible"
        android:id="@+id/ibtn_light"
        android:background="@color/transparent"
        android:src="@drawable/img_light"
        android:textSize="@dimen/font_big"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:layout_height="38dp" />
</android.support.v7.widget.Toolbar>