<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="15dp"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_user_avatar"
        android:src="@drawable/img_user_avatar_default"
        android:layout_width="46dp"
        android:layout_marginRight="10dp"
        android:layout_height="46dp" />
    
    
    <RelativeLayout
        android:layout_toRightOf="@+id/img_user_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="@drawable/bg_chat_other"
            android:layout_width="match_parent"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/text_radio_normal"
            android:text="天呐~无法控制对刘德华的喜欢，超喜欢他的《忘情水》"
            android:layout_height="wrap_content" />

        </RelativeLayout>
</RelativeLayout>