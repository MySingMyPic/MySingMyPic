<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ylsg365.pai.activity.login.LoginActivity"
    tools:ignore="MergeRootFrame">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back" />

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layout_edit_phone"
                style="@style/Yin.login.edit.container">

                <TextView
                    android:id="@+id/edit_phone"
                    style="@style/Yin.login.edit"
                    android:gravity="center_vertical"
                    android:hint="清空缓存"
                    android:inputType="phone"
                    android:maxLength="11" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_edit_password"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/edit_password_new"
                    style="@style/Yin.login.edit"
                    android:hint="是否播放视频"
                    android:gravity="center_vertical"
                    android:inputType="textPassword" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_edit_password_new_confirm"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/edit_password_new_confirm"
                    style="@style/Yin.login.edit"
                    android:hint="是否接受推送"
                    android:gravity="center_vertical"
                    android:inputType="textPassword" />

                <ToggleButton
                    android:layout_alignParentRight="true"
                    android:layout_width="53.5dp"
                    android:layout_height="25dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/selector_toggle_yes_no"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_soft_about"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <TextView
                    style="@style/Yin.login.edit"
                    android:layout_width="150dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:maxLength="8"
                    android:hint="关于我唱我拍"
                    android:inputType="textPassword" />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_soft_description"
                style="@style/Yin.login.edit.container"
                android:layout_marginTop="15dp">

                <TextView
                    style="@style/Yin.login.edit"
                    android:hint="软件说明"
                    android:gravity="center_vertical"
                    android:inputType="textPassword" />
            </RelativeLayout>
            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/btn_setting_logout"
                style="@style/Yin.login.button.red"
                android:text="退出登录"
                />

        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
