<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ylsg365.pai.activity.video.VideoLongActivity">
    <include android:id="@+id/toolbar" layout="@layout/toolbar_video"/>

    <ImageView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:src="@drawable/img_video"
        android:scaleType="centerCrop"
        android:layout_above="@+id/layout_video_bottom_bar"
        android:layout_height="match_parent" />

    <LinearLayout
        android:gravity="center"
        android:id="@+id/input_music"
        android:layout_above="@+id/layout_video_bottom_bar"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/makemv"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:text="插入我的音乐制作MV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_hint_grey"
            android:textSize="20dp"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_video_bottom_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/luzhishangchuang"/>
        <TextView
            android:layout_marginLeft="3dp"
            android:text="录制上传"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_hint_grey"
            android:textSize="20dp"
            ></TextView>
    </LinearLayout>

</RelativeLayout>
