<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                tools:context="com.yieqi.app.activity.main.FriendFragment">

    <RelativeLayout
        android:id="@+id/layout_me_bg"
        android:layout_width="match_parent"
        android:background="@drawable/bg_default"
        android:layout_height="263dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_back_transparent"/>

        <include
            layout="@layout/layout_other_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:background="@color/bg_main"
        android:layout_below="@+id/layout_me_bg"
        >


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_me_zong"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:background="@drawable/selector_item_common"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="所在地区"
                        android:textColor="@color/text_item_grey_2"/>

                    <TextView
                        android:id="@+id/text_user_area"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="北京"
                        android:textColor="@color/text_radio_normal"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="注册时间"
                        android:textColor="@color/text_item_grey_2"/>

                    <TextView
                        android:id="@+id/text_user_ctime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:includeFontPadding="false"
                        android:text="2015-02-01"
                        android:textColor="@color/text_radio_normal"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="50dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_me_zong"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_works"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/icon_myzone_works"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="70dp"
                        android:layout_centerVertical="true"
                        android:text="他的作品"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:id="@+id/layout_original"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="26.5dp"
                            android:src="@drawable/icon_myzone_original_base"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="70dp"
                        android:layout_centerVertical="true"
                        android:text="他的原创基地"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:id="@+id/layout_newsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="26.5dp"
                            android:src="@drawable/icon_myzone_original_base"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="70dp"
                        android:layout_centerVertical="true"
                        android:text="他的新鲜事"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_zong_gray_top"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/layout_private_message"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1">
            <ImageView
                android:layout_marginRight="3dp"
                android:layout_width="18dp"
                android:background="@drawable/selector_btn_private_message"
                android:layout_height="18.5dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_normal"
                android:includeFontPadding="false"
                android:textColor="@color/bottom_bar_text_normal"
                android:text="私信"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_quiet_attention"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:clickable="true"
            android:layout_weight="1">

            <ImageView
                android:layout_marginRight="3dp"
                android:layout_width="19.5dp"
                android:background="@drawable/selector_btn_quiet_attention"
                android:layout_height="17.5dp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_normal"
                android:includeFontPadding="false"
                android:textColor="@color/bottom_bar_text_normal"
                android:text="悄悄关注"
                />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/layout_attention"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <com.ylsg365.pai.activity.view.CheckableImageView
                android:id="@+id/img_attention"
                android:layout_marginRight="3dp"
                android:layout_width="19.5dp"
                android:background="@drawable/selector_btn_attention"
                android:layout_height="17.5dp"/>

            <TextView
                android:id="@+id/text_attention"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:textSize="@dimen/font_normal"
                android:textColor="@color/bottom_bar_text_normal"
                android:text="关注"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
