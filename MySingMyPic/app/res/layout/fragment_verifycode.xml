<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"   android:background="@color/bg_main"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="24dp"
    tools:context="com.yieqi.app.activity.login.VerifyCodeActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/layout_edit_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg_input">

            <EditText
                android:id="@+id/edit_login_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17.5dp"
                android:layout_marginLeft="22.5dp"
                android:layout_marginRight="22.5dp"
                android:layout_marginTop="17.5dp"
                android:background="@color/transparent"
                android:hint="@string/verify_input_hint_verifycode"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:textColorHint="@color/text_hint_grey"
                android:textSize="@dimen/font_small" />

        </RelativeLayout>




        <Button
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/btn_login_password_forget"
            android:background="@drawable/selector_bg_btn_login"
            android:text="@string/verify_next"
            android:textColor="@color/white"
            android:textSize="@dimen/font_big" />
    </LinearLayout>

</RelativeLayout>
