<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                tools:context="com.yieqi.app.activity.main.FriendFragment">


    <RelativeLayout
        android:id="@+id/layout_me_bg"
        android:background="@drawable/bg_default"
        android:layout_width="match_parent"
        android:layout_height="263dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_back_transparent"/>

        <include
            layout="@layout/layout_me_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:id="@+id/layout_user_info"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:layout_below="@+id/layout_me_bg"
        >


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_me_zong"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="所在地区"
                        android:textColor="@color/text_item_grey_2"/>

                    <TextView
                        android:id="@+id/text_user_area"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="true"
                        android:text="北京"
                        android:textColor="@color/text_radio_normal"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:includeFontPadding="false"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="注册时间"
                        android:textColor="@color/text_item_grey_2"/>

                    <TextView
                        android:id="@+id/text_user_ctime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="2015-02-01"
                        android:textColor="@color/text_radio_normal"/>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_me_zong"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:id="@+id/layout_vip_open"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"

                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/icon_myzone_open_vip"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/text_member"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="开通会员"
                        android:textColor="@color/text_radio_normal"/>
                </LinearLayout>

                <ImageView
                    android:background="@drawable/icon_vip"
                    android:layout_width="21dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/text_vip_right"
                    android:layout_centerVertical="true"
                    android:layout_height="12dp"/>

                <TextView
                    android:id="@+id/text_vip_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="会员特权"
                    android:textColor="@color/text_hint_grey"/>


            </RelativeLayout>

            <LinearLayout
                android:paddingBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_me_zong"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_myWorks"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/icon_myzone_works"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="70dp"
                        android:layout_centerVertical="true"
                        android:text="我的作品"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:id="@+id/layout_myOriginal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="26.5dp"
                            android:src="@drawable/icon_myzone_original_base"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="70dp"
                        android:layout_centerVertical="true"
                        android:text="我的原创基地"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:id="@+id/layout_lookme"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_myzone_look_me"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="70dp"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:text="谁看过我"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/layout_myMoney"
                    >

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/icon_myzone_yinbi"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="70dp"
                        android:text="我的音乐币"
                        android:layout_centerVertical="true"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/layout_newsInfo"
                    >

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="18.5dp"
                            android:layout_height="26dp"
                            android:src="@drawable/icon_myzone_like"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_marginLeft="70dp"
                        android:text="点赞"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:id="@+id/layout_myCollection"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25.5dp"
                            android:layout_height="24.5dp"
                            android:src="@drawable/icon_myzone_keep"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="70dp"
                        android:singleLine="true"
                        android:text="我的收藏"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:id="@+id/layout_song_purchased"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="21dp"
                            android:src="@drawable/icon_myzone_buy_song"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="70dp"
                        android:text="已购作品"
                        android:textColor="@color/text_radio_normal"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>

                <RelativeLayout
                    android:id="@+id/layout_attention"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                    <LinearLayout
                        android:layout_width="60dp"
                        android:gravity="center_horizontal"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="24.5dp"
                            android:layout_height="21.5dp"
                            android:src="@drawable/icon_myzone_care"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="70dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="悄悄关注"
                        android:textColor="@color/text_radio_normal"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/line_radio"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>