<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7.5dp"
    android:layout_marginTop="7.5dp"
    android:background="@drawable/bg_me_zong"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:paddingRight="15dp"
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_user_headImg"
            android:layout_width="46dp"
            android:scaleType="fitXY"
            android:layout_height="46dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_user_avatar_default" />

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/img_user_headImg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_message_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="11.5dp"
                    android:layout_height="11.5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_info_type_news" />

                <TextView
                    android:id="@+id/text_nickName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="荒岛余生"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_cTime"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/layout_message_title"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="2015-02-14"
                android:textColor="@color/text_item_grey"
                android:textSize="@dimen/font_small" />

        </LinearLayout>
        <TextView
            android:id="@+id/text_price"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_sing"
            android:layout_alignParentRight="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/purple"
            android:textSize="20dp"
            android:text="$78"
            android:layout_width="wrap_content"
            android:layout_height="26dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_top"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="我刚刚录了一首好汉歌点击听歌"
        android:textColor="@color/text_item_grey"
        android:textSize="@dimen/font_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="15.5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/img_keep_n" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text=""
                android:textColor="@color/text_radio_normal"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="15.5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/img_share_n" />

            <TextView
                android:id="@+id/text_forwardCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="553"
                android:textColor="@color/text_radio_normal"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="15.5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/img_comment_n" />

            <TextView
                android:id="@+id/text_commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="553"
                android:textColor="@color/text_radio_normal"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="15.5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/img_like_n" />

            <TextView
                android:id="@+id/text_niceCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="553"
                android:textColor="@color/text_radio_normal"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
